# Lume AI Productivity Agent - Next.js Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# API Configuration
# Base URL for the FastAPI backend server
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Authentication Configuration  
# JWT secret key for client-side token validation (optional)
NEXT_PUBLIC_JWT_SECRET=your_jwt_secret_here

# Google OAuth Configuration (for frontend redirects)
NEXT_PUBLIC_GOOGLE_OAUTH_CLIENT_ID=836817109369-o9fukeu4ocrspn9fdrvk0iitclpeujut.apps.googleusercontent.com
NEXT_PUBLIC_GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Application Configuration
NEXT_PUBLIC_APP_NAME=Lume AI Productivity Agent
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG_LOGGING=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Development Configuration
NEXT_PUBLIC_DEVELOPMENT_MODE=true

# API Timeouts (in milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_POLLING_INTERVAL=2000

# Security Configuration
NEXT_PUBLIC_ENABLE_HTTPS_ONLY=false
NEXT_PUBLIC_ENABLE_SECURE_COOKIES=false
